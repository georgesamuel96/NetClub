<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginBottom="@dimen/_4sdp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/container1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/userProfile"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:src="@drawable/profile"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_8sdp"/>

                <ImageView
                    android:id="@+id/deleteBtn"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:src="@drawable/dots"
                    android:layout_alignParentRight="true"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/userProfile"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_32sdp"
                    android:paddingLeft="@dimen/_8sdp">

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User Name"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/postDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13/03/2019"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginTop="@dimen/_4sdp" />

                    <TextView
                        android:id="@+id/statue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mentor"
                        android:textColor="@color/red"
                        android:layout_below="@id/userProfile"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginTop="@dimen/_4sdp" />

                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/postImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_160sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder"
                android:layout_below="@id/container1"
                android:layout_marginTop="@dimen/_8sdp"/>

            <TextView
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marketing"
                android:layout_below="@id/postImage"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_16ssp"
                android:textColor="#635656"/>

            <RelativeLayout
                android:id="@+id/containerContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/category"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp">

                <TextView
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Post Content Post Content Post Content Post Content Post Content Post Content"
                    android:textSize="@dimen/_14ssp"
                    android:maxLines="2"/>

                <TextView
                    android:id="@+id/seeMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See more"
                    android:textColor="@color/colorPrimary"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/content"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/containerAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/containerContent"
                android:paddingBottom="@dimen/_4sdp">

                <ImageView
                    android:id="@+id/likeBtn"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:src="@mipmap/ic_like_gray" />

                <TextView
                    android:id="@+id/likeNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_toRightOf="@id/likeBtn"
                    android:text="102 Likes"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp" />

                <ImageView
                    android:id="@+id/saveBtn"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_save"/>

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>